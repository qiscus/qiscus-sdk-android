<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_white">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/secondary_text"
        android:textSize="14sp"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/bubble"
        android:layout_width="42dp"
        android:layout_height="27dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/message"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:scaleType="fitStart"
        android:src="@drawable/ic_arrow_bubble_primary_light"
        android:tint="@color/primary_light"/>

    <RelativeLayout
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/date"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="19dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="19dp"
        android:layout_marginStart="64dp"
        android:background="@drawable/rounded_primary_light_chat_bg"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="8dp">

        <RelativeLayout
            android:id="@+id/file"
            android:layout_width="236dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="@drawable/round_dark_white"
            android:padding="4dp">

            <ImageView
                android:id="@+id/ic_file"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_file"
                android:tint="@color/divider"/>

            <TextView
                android:id="@+id/file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/ic_file"
                android:layout_toLeftOf="@+id/iv_download"
                android:layout_toRightOf="@+id/ic_file"
                android:layout_toStartOf="@+id/iv_download"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_download"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/circle_divider"
                android:padding="4dp"
                android:src="@drawable/ic_download"
                android:tint="@color/secondary_text"
                android:visibility="visible"/>

            <com.github.lzyzsd.circleprogress.CircleProgress
                android:id="@+id/progress"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:visibility="gone"
                app:circle_finished_color="@color/primary_light"
                app:circle_text_size="12sp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/file_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/file"
            android:layout_alignStart="@+id/file"
            android:layout_below="@+id/file"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/icon_read"
            android:layout_below="@+id/file"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/icon_read"
            android:layout_toStartOf="@+id/icon_read"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/icon_read"
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:layout_alignEnd="@+id/file"
            android:layout_alignRight="@+id/file"
            android:layout_below="@+id/file"
            android:layout_gravity="bottom"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"/>
    </RelativeLayout>

    <!-- Add this view because Xiaomi need it -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/message"/>
</RelativeLayout>