<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/qiscus_comment_date"
        android:textSize="14sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/bubble"
        android:layout_width="42dp"
        android:layout_height="27dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/message"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:scaleType="fitStart"
        android:src="@drawable/ic_qiscus_my_first_bubble"
        android:tint="@color/qiscus_my_comment_bubble" />

    <RelativeLayout
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/date"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="19dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="19dp"
        android:layout_marginStart="64dp"
        android:background="@drawable/qiscus_my_comment_bubble"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="8dp">

        <RelativeLayout
            android:id="@+id/file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:padding="4dp"
                android:src="@drawable/ic_qiscus_play_audio"
                android:tint="@color/qiscus_audio_player_icon_tint"
                android:visibility="visible" />

            <com.qiscus.sdk.chat.presentation.uikit.view.CircleProgress
                android:id="@+id/progress"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:visibility="gone"
                app:circle_finished_color="@color/qiscus_my_comment_finished_progress"
                app:circle_text_size="14sp"
                app:circle_unfinished_color="@color/qiscus_my_comment_finished_progress" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-8dp"
                android:layout_marginStart="-8dp"
                android:layout_toEndOf="@+id/iv_play"
                android:layout_toRightOf="@+id/iv_play"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatSeekBar
                    android:id="@+id/seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progressDrawable="@drawable/qiscus_audio_progress"
                    android:thumb="@drawable/qiscus_audio_progress_thumb" />

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginStart="17dp"
                    android:text="@string/qiscus_audio_duration"
                    android:textColor="@color/qiscus_audio_duration"
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/icon_read"
            android:layout_below="@+id/file"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/icon_read"
            android:layout_toStartOf="@+id/icon_read"
            android:textColor="@color/qiscus_my_comment_time"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/icon_read"
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:layout_alignEnd="@+id/file"
            android:layout_alignRight="@+id/file"
            android:layout_below="@+id/file"
            android:layout_gravity="bottom"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp" />
    </RelativeLayout>

    <!-- Add this view because Xiaomi need it -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/message" />
</RelativeLayout>