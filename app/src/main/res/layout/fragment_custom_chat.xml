<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qiscus_dark_white">

    <LinearLayout
        android:id="@+id/empty_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/empty_chat_icon"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_qiscus_chat_empty"/>

        <TextView
            android:id="@+id/empty_chat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="@string/welcome"
            android:textColor="@color/qiscus_divider"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/empty_chat_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/desc_empty_chat"
            android:textColor="@color/qiscus_divider"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipe_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.qiscus.sdk.ui.view.QiscusRecyclerView
                    android:id="@+id/list_message"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:paddingBottom="64dp"
                    android:paddingTop="64dp"/>
            </android.support.v4.widget.SwipeRefreshLayout>

            <TextView
                android:id="@+id/button_new_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="64dp"
                android:background="@drawable/qiscus_rounded_accent_bg"
                android:elevation="1dp"
                android:padding="8dp"
                android:text="@string/new_message"
                android:textColor="@color/qiscus_white"
                android:textSize="14sp"
                android:visibility="gone"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/add_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/input_panel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/rounded_white"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/button_add_image"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bt_qiscus_selector_grey"
                android:paddingEnd="2dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingStart="2dp"
                android:paddingTop="2dp"
                android:src="@drawable/ic_qiscus_add_image"/>

            <ImageView
                android:id="@+id/button_pick_picture"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bt_qiscus_selector_grey"
                android:paddingEnd="1dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingStart="1dp"
                android:paddingTop="2dp"
                android:src="@drawable/ic_qiscus_pick_picture"/>

            <ImageView
                android:id="@+id/button_add_file"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bt_qiscus_selector_grey"
                android:paddingEnd="2dp"
                android:paddingLeft="2dp"
                android:paddingRight="1dp"
                android:paddingStart="1dp"
                android:paddingTop="2dp"
                android:src="@drawable/ic_qiscus_add_file"/>

            <ImageView
                android:id="@+id/button_add_sound"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bt_qiscus_selector_grey"
                android:paddingEnd="2dp"
                android:paddingLeft="2dp"
                android:paddingRight="1dp"
                android:paddingStart="1dp"
                android:paddingTop="2dp"
                android:src="@drawable/ic_qiscus_mic_plus"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/input_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_white"
            android:elevation="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/button_attach"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bt_qiscus_selector_grey"
                android:padding="4dp"
                android:src="@drawable/ic_action_add"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:id="@+id/linItemSoundRec"
                android:visibility="gone">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/chat_audio_cancel"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@android:color/white"
                        android:enabled="false"
                        android:scaleType="centerInside"
                        android:src="@android:drawable/ic_delete" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:id="@+id/record_panel"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="2dp"
                        android:background="#ffffff"
                        android:visibility="visible"
                        android:layout_gravity="bottom">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:background="#ffffffff"
                            android:orientation="horizontal"
                            android:paddingLeft="13dp"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="1dp"
                                android:src="@drawable/qiscus_circle_red" />

                            <TextView
                                android:id="@+id/recording_time_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="6dp"
                                android:text="00:00"
                                android:textColor="@color/qiscus_secondary_text"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="48dp"
                    android:layout_height="48dp">

                </LinearLayout>


            </LinearLayout>

            <EditText
                android:id="@+id/field_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/hint_message"
                android:imeOptions="actionSend"
                android:inputType="textLongMessage|textMultiLine|textCapSentences"
                android:maxLines="4"
                android:padding="8dp"
                android:textColor="@color/qiscus_primary_text"
                android:textSize="16sp"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/button_send"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_qiscus_send_off"/>

        </LinearLayout>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:indeterminate="true"
        android:visibility="gone"/>


</RelativeLayout>
